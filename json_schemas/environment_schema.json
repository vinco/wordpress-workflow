{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Wordpress workflow environments",
    "description": "List of environments",
    "type": "object",
    "properties": {
        "url": {
            "description": "Wordpress URL",
            "type": "string"
        },
        "user": {
            "description": "Server's user",
            "type": "string"
        },
        "group": {
            "description": "Server's group",
            "type": "string"
        },
        "hosts": {
            "description": "hosts list",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "wpworkflow_dir": {
            "description": "server's src directory",
            "type": "string",
            "pattern": "^/.*/$"
        },
        "public_dir": {
            "description": "server's public directory",
            "type": "string",
            "pattern": "^/.*/$"
        },
        "title": {
            "description": "wordpress' title",
            "type": "string"
        },
        "admin_user": {
            "description": "wordpress' admin username",
            "type": "string"
        },
        "admin_password": {
            "description": "wordpress' admin password",
            "type": "string"
        },
        "admin_email": {
            "description": "wordpress' admin email",
            "type": "string"
        },
        "dbname": {
            "description": "wordpress' database name",
            "type": "string"
        },
        "dbuser": {
            "description": "wordpress' database user",
            "type": "string"
        },
        "dbpassword": {
            "description": "wordpress' database password",
            "type": "string"
        },
        "dbhost": {
            "description": "wordpress' datbase host",
            "type": "string"
        },
        "dbprefix": {
            "description": "wordpress' database table prefix",
            "type": "string"
        },
        "command_prefixes": {
            "description": "command prefixes' list",
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        }
    },
    "required": [
        "title", "url", "user", "group", "hosts", "public_dir", "wpworkflow_dir",
        "command_prefixes", "admin_user", "admin_password", "admin_email",
        "dbname", "dbuser", "dbpassword", "dbhost", "dbprefix"
    ]
}
